// sidebar.pug
aside.w-56(class="bg-[#0A0A0A] text-white  flex flex-col")
  // Company Header with Dropdown
  .p-4.border-b.border-gray-800
    button#companyDropdown.flex.items-center.justify-between.w-full.hover_bg-gray-800.rounded-md.p-2.transition-colors
      .flex.items-center.gap-3
        svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16")
        .flex.flex-col.items-start
          span.font-semibold Acme Co.
          span.text-xs.text-gray-400 Palo Alto, CA
      svg.w-4.h-4.text-gray-400(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7")

    #companyMenu.hidden.absolute.left-4.mt-2.w-56.rounded-md.shadow-lg.bg-gray-800.ring-1.ring-black.ring-opacity-5.z-50
      .py-1
        a.block.px-4.py-2.text-sm.text-gray-300.hover_bg-gray-700(href="#") Switch Organization
        a.block.px-4.py-2.text-sm.text-gray-300.hover_bg-gray-700(href="#") Organization Settings
        a.block.px-4.py-2.text-sm.text-gray-300.hover_bg-gray-700(href="#") Manage Team

  // Navigation Menu
  nav.flex-1.px-2.py-4.space-y-6
    div
      // Home Button
      a.flex.items-center.gap-3.w-full.bg-blue-900.text-white.rounded-md.p-2.mb-4(href="#")
        svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
        span.font-medium Home

      // Main Menu Section
      .mb-6
        span.px-3.text-xs.font-semibold.text-gray-400.uppercase Main Menu
        .mt-3.space-y-1
          a.flex.items-center.gap-3.w-full.text-gray-300.hover_bg-gray-800.rounded-md.p-2(href="#")
            svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z")
            span Accounts

          a.flex.items-center.gap-3.w-full.text-gray-300.hover_bg-gray-800.rounded-md.p-2(href="#")
            svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z")
            span Payments

          // Balances Dropdown
          button#balancesDropdown.flex.items-center.justify-between.w-full.text-gray-300.hover_bg-gray-800.rounded-md.p-2
            .flex.items-center.gap-3
              svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3")
              span Balances
            svg.w-4.h-4.text-gray-400(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7")

          #balancesMenu.hidden.ml-12.space-y-1
            a.block.text-gray-300.hover_bg-gray-800.rounded-md.py-2.px-3.text-sm(href="#") Overview
            a.block.text-gray-300.hover_bg-gray-800.rounded-md.py-2.px-3.text-sm(href="#") Transactions
            a.block.text-gray-300.hover_bg-gray-800.rounded-md.py-2.px-3.text-sm(href="#") Reports


      // General Section
      .mb-6
        span.px-3.text-xs.font-semibold.text-gray-400.uppercase General
        .mt-3.space-y-1
          each item in ['Developers', 'View Test Data', 'Settings']
            a.flex.items-center.gap-3.w-full.text-gray-300.hover_bg-gray-800.rounded-md.p-2(href="#")
              svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
              span= item


  
      // Updates Section
    .px-4.py-2
        span.text-xs.font-semibold.text-gray-400.uppercase Updates
        a.flex.items-center.gap-3.w-full.text-gray-300.hover_bg-gray-800.rounded-md.p-2.mt-2(href="#")
          svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15")
          span Changelog

    // Bottom Icons
    .flex.items-center.justify-between.px-4.py-3
        // Settings Button
        button.text-gray-400.hover_text-white.transition-colors
        svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")

        // Filter Button
        button.text-gray-400.hover_text-white.transition-colors
        svg.w-5.h-5(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z")

        // Profile Button
        button.relative
        img.w-8.h-8.rounded-full(src="https://v0.dev/placeholder.svg" alt="Profile")
        span.absolute.bottom-0.right-0.block.w-2.h-2.bg-green-400.rounded-full.border-2(class="border-[#0A0A0A]")

script.
  // Dropdown functionality
  document.getElementById('companyDropdown').addEventListener('click', function() {
    document.getElementById('companyMenu').classList.toggle('hidden');
    document.getElementById('balancesMenu').classList.add('hidden');
  });

  document.getElementById('balancesDropdown').addEventListener('click', function() {
    document.getElementById('balancesMenu').classList.toggle('hidden');
    document.getElementById('companyMenu').classList.add('hidden');
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('#companyDropdown') && !event.target.closest('#companyMenu')) {
      document.getElementById('companyMenu').classList.add('hidden');
    }
    if (!event.target.closest('#balancesDropdown') && !event.target.closest('#balancesMenu')) {
      document.getElementById('balancesMenu').classList.add('hidden');
    }
  });